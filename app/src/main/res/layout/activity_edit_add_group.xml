<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAddGroupAct">

    <TextView
        android:id="@+id/SelectGroupLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:saveEnabled="false"
        android:text="Select a Group"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/SelectSubGroupLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/GroupSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:saveEnabled="false"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SelectGroupLabel" />

    <Spinner
        android:id="@+id/SubGroupSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:saveEnabled="false"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SelectSubGroupLabel" />

    <TextView
        android:id="@+id/SelectSubGroupLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:saveEnabled="false"
        android:text="Select a sub group"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GroupSpinner" />

    <Button
        android:id="@+id/AddGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:saveEnabled="false"
        android:text="Add Group"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/AddSubGroup"
        app:layout_constraintStart_toStartOf="@+id/AddSubGroup" />

    <Button
        android:id="@+id/AddSubGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="113dp"
        android:layout_marginBottom="111dp"
        android:saveEnabled="false"
        android:text="Add Sub Group"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/AddBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConfirmButton" />

    <Button
        android:id="@+id/AddBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="18dp"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/removeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="18dp"
        android:text="Remove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/DeleteGroupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:saveEnabled="false"
        android:text="Delete Group"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/DeleteSubGroupBtn"
        app:layout_constraintEnd_toEndOf="@+id/DeleteSubGroupBtn" />

    <Button
        android:id="@+id/DeleteSubGroupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:saveEnabled="false"
        android:text="Delete Sub Group"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/AddSubGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/AddSubGroup" />

    <TextView
        android:id="@+id/EnterGroupLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:saveEnabled="false"
        android:text="Enter Group Name"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/EnterGroupName"
        app:layout_constraintEnd_toStartOf="@+id/EnterGroupName" />

    <TextView
        android:id="@+id/EnterSubGroupLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:saveEnabled="false"
        android:text="Enter Sub Group Name"
        android:visibility="invisible"
        app:layout_constraintBaseline_toBaselineOf="@+id/EnterSubGroupName"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/EnterGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:saveEnabled="false"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SubGroupSpinner" />

    <EditText
        android:id="@+id/EnterSubGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:saveEnabled="false"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/EnterGroupName"
        app:layout_constraintTop_toBottomOf="@+id/EnterGroupName" />

    <Button
        android:id="@+id/ConfirmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:saveEnabled="false"
        android:text="Confirm"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EnterSubGroupName" />

    <Button
        android:id="@+id/CancelGroupEditBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:text="Cancel"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>